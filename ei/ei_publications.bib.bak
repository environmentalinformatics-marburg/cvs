@Article{Thies2008b,
  Title                    = {{P}recipitation process and rainfall intensity differentiation using {Meteosat} {Second} {Generation} {Spinning} {Enhanced} {Visible} and {Infrared} {Imager} data},
  Author                   = {Thies, Boris and Nauss, Thomas and Bendix, JÃ¶rg},
